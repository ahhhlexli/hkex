#:import C kivy.utils.get_color_from_hex

<StockCode>:
   
    number: number
    info: info  # Global variable name references the id name
    #email: email  # Global variable email references the id email
    #current: current

    GridLayout:
        canvas.before:
            Color:
                rgb: C("#696969")
            Rectangle:
                pos: self.pos
                size: self.size

        cols:1
        size: root.width, root.height

        GridLayout:
            # canvas.before:
            #     Color:
            #         rgb: C("#000080")
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size

            cols:2
            padding: 50, 20, 50, 20
            spacing: 0, 20
            
            Label:
                text: "Stock Code: "
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                size_hint_x: 0.3
                size_hint_y: 0.5
                width: 50
                font_size: 20

            TextInput:
                id: number  
                size_hint_x: 0.7
                size_hint_y: 0.5
                width: 400
                font_size: 36
                valign: 'middle'
                multiline:False
                writetab: False
                on_text_validate: root.search()

            Label:
                text: "Info: "
                text_size: self.size
                size_hint_x: 0.3
                size_hint_y: 0.9
                halign: 'left'
                valign: 'middle'
                font_size: 20
                                
            Label:
                id: info
                text_size: self.size
                size_hint_x: 0.7
                size_hint_y: 0.9
                halign: 'left'
                valign: 'middle'
                font_size: 18

        FloatLayout:
            size_hint_y: 0.5
            
            Button:
                pos_hint: {'center_x': .25, 'center_y': .5}
                size_hint_x: None
                size_hint_y: 0.5
                width: 150
                text:"Submit"
                on_press: root.search()

            Button:
                pos_hint: {'center_x': .75, 'center_y': .5}
                size_hint_x: None
                size_hint_y: 0.5
                width: 150
                text:"Search History"
                on_press: root.manager.current = 'history'

        # GridLayout:
        #     cols: 1
        #     padding: 50, 20, 50, 20
            
        #     Label:
        #         id: current
        #         text_size: self.size
        #         halign: 'left'
        #         valign: 'middle'

<RV>:
    
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<HistoryScreen>:
    BoxLayout:
        #orientation: "vertical"
        RV:
        Button:
            text: 'Previous screen'
            size_hint: None, None
            size: 150, 50
            on_release: root.manager.current = root.manager.previous()
